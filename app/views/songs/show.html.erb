

<div class="row">
  <div class="text-center">
    <%= image_tag @song.artist.photo.image, class:"artist_show_images" %>
  </div>
</div>

<h3 class="text-center lyrics_titles">Lyrics to <%= @song.name %> by <%= @song.artist.full_name %> </h3>

<% if !@song.lyric %>
  <h3 class="lyrics text-center">Sorry, there are no lyrics for this song right now!</h3>
  <%= render 'lyrics/form' %>
<% else %>
  <p class="lyrics text-center"><%= @song.lyric.content %></p>
<% end %>

<div class="container-fluid buttons_row">
  <div class="col-xs-4">
    <div class="text-center">
      <%= link_to artist_path(@song.artist) do %>
        <i class="fa fa-arrow-circle-o-left fa-3x" aria-hidden="true"></i>
      <% end %>
    </div>
  </div>
  <div class="col-xs-4">
    <div class="text-center">
      <%= link_to new_song_path do %>
        <i class="fa fa-upload fa-3x" aria-hidden="true"></i>
      <% end %>
    </div>
  </div>
  <div class="col-xs-4">
    <div class="text-center">
      <%= link_to "All Songs", root_path, class:"btn btn-warning" %>
    </div>
  </div>
</div>
