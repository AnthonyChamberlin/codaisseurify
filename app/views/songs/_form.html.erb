  <%= form_for @song do |f| %>
    <div class="form-group">
      <label>Song Name:</label>
      <%= f.text_field :name, placeholder: "Enter Song Name...", class: "form-control" %>
    </div>

    <div class="form-group">
      <label>Artist: </label>
    <%= f.collection_select(:artist_id, Artist.order_by_name.all, :id, :full_name, prompt: 'Select an Artist') %>
    </div>


    <div class="actions">
      <%= f.submit "Create", class: "btn btn-success" %>
    </div>
  <% end %>
