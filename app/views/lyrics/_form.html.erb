<%= form_for @lyric do |f| %>
  <div class="form-group">
    <label>Lyrics:</label>
    <%= f.text_field :content, placeholder: "Enter Lyrics...", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Song: </label>
  <%= f.collection_select(:song_id, Song.all, :id, :name, prompt: 'Select a Song') %>
  </div>
  <div class="actions">
    <%= f.submit "Add", class: "btn btn-success" %>
  </div>
<% end %>
