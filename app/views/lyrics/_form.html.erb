<%= form_for [@song, @lyric] do |f| %>
<div class="form-group text-center">
  <%= f.text_area :content, label: "Add Lyrics Here...", class:"lyrics_textarea" %>
</div>
<div class="form-group text-center">
  <label>Song:
  </label>
  <%= f.collection_select(:song_id, Song.all, :id, :name, prompt: 'Select a Song') %>
</div>
<div class="form-group text-center">
  <%= f.submit "Add Now!", class: "btn btn-success" %>
</div>
<% end %>
