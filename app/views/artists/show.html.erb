
<h2 class="text-center"><%= @artist.full_name %>'s Play Page.</h2>
<div class="container">
  <div class="row">
    <% @artist.songs.each do |song| %>
      <div class="col-md-4">
        <div class="col-xs-12 inner_song">
          <h3 class="text-center"><%= song.name %></h3>
          <div class="text-center">
            <%= link_to "Remove", song_path(song), method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-danger" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<hr>
<div class="row">
  <div class="col-sm-4">
    <div class="text-center">
      <%= link_to "Back to Artists", root_path, class:"btn btn-default" %>
    </div>
  </div>
  <div class="col-sm-4">
    <div class="text-center">
      <%= link_to "Upload Song", new_song_path, class:"btn btn-primary" %>
    </div>
  </div>
  <div class="col-sm-4">
    <div class="text-center">
      <%= link_to "All Songs", root_path, class:"btn btn-warning" %>
    </div>
  </div>
</div>
