
<div class="container-fluid buttons_row">
  <div class="col-xs-4">
    <div class="text-center">
      <%= link_to root_path do %>
        <i class="fa fa-arrow-circle-o-left fa-3x" aria-hidden="true"></i>
      <% end %>
    </div>
  </div>
  <div class="col-xs-4">
    <div class="text-center">
      <%= link_to new_song_path do %>
        <i class="fa fa-upload fa-3x" aria-hidden="true"></i>
      <% end %>
    </div>
  </div>
  <div class="col-xs-4">
    <div class="text-center">
      <%= link_to "All Songs", root_path, class:"btn btn-warning" %>
    </div>
  </div>
</div>


<div class="row">
  <div class="text-center">
    <%= image_tag @artist.photo.image, class:"artist_show_images" %>
  </div>
</div>
<h2 class="text-center play_title"><%= @artist.full_name %>'s Play Page.</h2>
<div class="container all_songs">
  <div class="row">
    <% @artist.songs.each do |song| %>
      <div class="col-md-4 col_4">
        <div class="col-xs-12 inner_song">
          <div class="col-xs-8"><h3 class="text-center"><%= song.name %></h3></div>
          <div class="col-xs-2">
            <div class="text-right">
              <%= link_to song_path(song), class:"btn" do %><i class="fa fa-music fa-2x" aria-hidden="true"></i><% end %>
            </div>
          </div>
          <div class="col-xs-2">
            <div class="text-right">
              <%= link_to song_path(song), method: :delete, data: { confirm: "Are you sure?" }, class:"btn" do %><i class="fa fa-trash-o fa-2x" aria-hidden="true"></i><% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
