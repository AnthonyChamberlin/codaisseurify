<h1 class="text-center main_title">Welcome to Codaisseurify!</h1>
<div class="row">
  <div class="text-center">
    <%= image_tag "headphones.png" %>
  </div>
</div>
<h3 class="text-center main_title">View All Artists Below</h3>

<div class="container-fluid down_arrow">
  <div class="row down_arrow_row text-center">
    <%= image_tag "home_down_arrow.gif" %>
  </div>
</div>


<div class="container filter_section">
  <h2>Filter</h2>
  <p class="exp">Here you can filter the artists either by their Name (in alphabetical order), or from when they joined Codaisseurify!</p>

  <ul class="nav nav-tabs">
    <li class="active">
      <a data-toggle="tab" href="#home">By Name</a>
    </li>
    <li>
      <a data-toggle="tab" href="#menu1">Most Recent</a>
    </li>
  </ul>

  <div class="tab-content">
    <div id="home" class="tab-pane fade in active">
      <% @artists.order_by_name.each do |artist| %>
      <div class="col-md-4">
        <div class="col-xs-12 inner_artist">
          <div class="row image_and_title">
            <div class="col-xs-3"><%= image_tag artist.photo.image, class:"artist_images" %></div>
            <div class="col-xs-9">
              <h3 class="text-center"><%= link_to artist.full_name, artist_path(artist), class:"artist_name" %></h3>
              <div class="text-center">
                <%= "Joined #{time_ago_in_words(artist.created_at).gsub('about ','')} ago" %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-6">
              <div class="text-left">
                <%= link_to artist_path(artist) do %>
                <i class="fa fa-arrow-circle-o-right fa-2x fa-circle-go" aria-hidden="true"></i><% end %>
              </div>
            </div>
            <div class="col-xs-6">
              <div class="text-right">
                <%= link_to artist_path(artist), method: :delete, data: { confirm: "Are you sure?" }, class:"btn" do %>
                <i class="fa fa-trash-o fa-2x" aria-hidden="true"></i><% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <div id="menu1" class="tab-pane fade">
      <% @artists.order_by_join.each do |artist| %>
      <div class="col-md-4">
        <div class="col-xs-12 inner_artist">
          <div class="row image_and_title">
            <div class="col-xs-3"><%= image_tag artist.photo.image, class:"artist_images" %></div>
            <div class="col-xs-9">
              <h3 class="text-center"><%= link_to artist.full_name, artist_path(artist), class:"artist_name" %></h3>
              <div class="text-center">
                <%= "Joined #{time_ago_in_words(artist.created_at).gsub('about ','')} ago" %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-6">
              <div class="text-left">
                <%= link_to artist_path(artist) do %>
                <i class="fa fa-arrow-circle-o-right fa-2x fa-circle-go" aria-hidden="true"></i><% end %>
              </div>
            </div>
            <div class="col-xs-6">
              <div class="text-right">
                <%= link_to artist_path(artist), method: :delete, data: { confirm: "Are you sure?" }, class:"btn" do %>
                <i class="fa fa-trash-o fa-2x" aria-hidden="true"></i><% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

